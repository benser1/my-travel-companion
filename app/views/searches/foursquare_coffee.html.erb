<h1>Foursquare Page</h1>

<h1>Search for Coffee Shops Near Me</h1>

<%= form_tag '/foursquare_coffee' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>

<div>
  <% if @venues %>
    <ul>
    <% @venues.each do |venue| %>
      <!-- <p>
        <%= venue %>
      </p> -->
      <li>
        <%= venue["name"] %><br>
        <%= venue["location"]["address"] %><br>
        <!-- <%= venue["location"]["lat"] %><br>
        <%= venue["location"]["lng"] %><br> -->
        Phone: <%= venue["contact"]["formattedPhone"] %><br>
        <iframe src= "https://maps.google.com/maps?q=<%= venue["location"]["lat"] %>,<%= venue["location"]["lng"] %>&hl=es;z=14&amp;output=embed"></iframe>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
